<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddCheckerActivity">

    <TextView
        android:id="@+id/label"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Cheker By Hand"
        android:layout_margin="10dp"
        android:textSize="20sp"/>

    <android.inputmethodservice.ExtractEditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/label"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />


    <TextView
        android:id="@+id/label2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add New Cheker By QR CODE"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tap" />

    <Button
        android:id="@+id/open_scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open scanner"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/label2"/>

</androidx.constraintlayout.widget.ConstraintLayout>